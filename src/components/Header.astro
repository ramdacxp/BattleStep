---
import Logo from "../assets/Logo.astro";

interface Props {
  title?: string;
}

const { title = "BattleStep" } = Astro.props;
const pathname = new URL(Astro.request.url).pathname;

---

<header
  class="flex items-center justify-between border-b border-slate-400 py-4"
>
  <a href="/" class="flex gap-2 ml-4">
    <Logo class="w-10" />
    <h1 class="font-light text-3xl">{title}</h1>
  </a>
  <div class="headerlinks mr-4 text-slate-500 hidden sm:block">
    <a class={pathname === "/" ? "active" : ""} href="/">Home</a>
    <a class={pathname === "/settings" ? "active" : ""} href="/settings"
      >Settings</a
    >
  </div>
</header>

<style>
  .headerlinks a.active {
    @apply underline;
  }
</style>

